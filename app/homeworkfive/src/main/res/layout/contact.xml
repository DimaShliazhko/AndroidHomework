<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_contact"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_contact_phone_24"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/name_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name_contact"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@id/image_contact"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/number_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="number_contact"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/image_contact"
        app:layout_constraintTop_toBottomOf="@+id/name_contact"

        ></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>